<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:minHeight="75dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <ImageView
        android:id="@+id/imageInOfferItem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/pizza_icon"
        android:paddingRight="5dp"
        android:src="@drawable/home_image" />

    <TextView
        android:id="@+id/titleTextInOfferItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="9dp"
        android:layout_toLeftOf="@+id/priceTextInOfferItem"
        android:layout_toRightOf="@id/imageInOfferItem"
        android:text="Pizza con piña"
        android:textColor="@color/text_color_listview"
        android:textSize="23sp" >
    </TextView>

    <TextView
        android:id="@id/priceTextInOfferItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="9dp"
        android:layout_toLeftOf="@+id/separatorRight"
        android:text="5€"
        android:textColor="@color/text_color_listview"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/descTextInOfferItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/separatorBottom"
        android:layout_below="@id/titleTextInOfferItem"
        android:layout_marginBottom="9dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/separatorRight"
        android:layout_toRightOf="@id/imageInOfferItem"
        android:text="desc"
        android:textColor="@color/text_gray"
        android:textSize="15sp" >

    </TextView>

    <View
        android:id="@id/separatorRight"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/imageButtonInOfferItem"
        android:background="@android:color/darker_gray" />

    <ImageButton
        android:id="@id/imageButtonInOfferItem"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/iconorderlist"
        android:contentDescription="" />

    <View
        android:id="@id/separatorBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/darker_gray" />

</RelativeLayout>
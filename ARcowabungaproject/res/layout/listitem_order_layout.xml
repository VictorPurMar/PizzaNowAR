<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:clickable="true"
    android:minHeight="130dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <View
        android:id="@id/separatorTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/darker_gray" />

    <ImageButton
        android:id="@+id/imageInItem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dateTextInOrderItem"
        android:background="@drawable/home_image"
        android:contentDescription="@string/pizza_icon"
        android:paddingRight="5dp" />

    <TextView
        android:id="@id/dateTextInOrderItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separatorTop"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:background="#335533"
        android:text="data" >
    </TextView>

    

    <TextView
        android:id="@+id/descTextInOrderItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/separatorBottom"
        android:layout_below="@id/dateTextInOrderItem"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/imageInItem"
        android:background="#33FF33"
        android:text="desc" >
    </TextView>

    <TextView
        android:id="@+id/priceTextInOrderItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separatorTop"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="13dp"
        android:layout_toLeftOf="@+id/separatorRight"
        android:background="#FF3333"
        android:text="preu"
        android:textColor="#E63444" >
    </TextView>
    <TextView
        android:id="@+id/descTextInItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/separatorBottom"
        android:layout_below="@id/titleTextInItem"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/separatorRight"
        android:layout_toRightOf="@id/imageInItem"
        android:background="#33FF33"
        android:text="desc" >
    </TextView>

    <View
        android:id="@id/separatorBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray" />

</RelativeLayout>
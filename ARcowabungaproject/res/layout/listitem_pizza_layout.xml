<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:minHeight="85dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:gravity="center" >

    <View
        android:id="@id/separatorTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/titleTextInPizzaItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separatorTop"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/priceTextInPizzaItem"
        android:layout_toRightOf="@+id/imageInPizzaItem"
        android:gravity="center_vertical"
        android:text="titol"
        android:textColor="@color/text_color_listview"
        android:textSize="22sp" >
    </TextView>

    <TextView
        android:id="@id/priceTextInPizzaItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separatorTop"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/separatorRight"
        android:text="preu"
        android:textColor="@color/text_color_listview"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/descTextInPizzaItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/separatorBottom"
        android:layout_below="@id/titleTextInPizzaItem"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/separatorRight"
        android:layout_toRightOf="@id/imageInPizzaItem"
        android:text="desc"
        android:textSize="15sp"
        android:textColor="@color/text_gray" >
    </TextView>

    <View
        android:id="@id/separatorRight"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/imageButtonInPizzaItem"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@id/imageButtonInPizzaItem"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageButtonInPizzaItemContent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/iconorderlist"
            android:contentDescription="@string/content_description_img" />
    </LinearLayout>

    <ImageView
        android:id="@id/imageInPizzaItem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@id/separatorTop"
        android:layout_alignTop="@+id/titleTextInPizzaItem"
        android:contentDescription="@string/pizza_icon"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:paddingRight="5dp"
        android:src="@drawable/home_image" />

    <View
        android:id="@+id/separatorTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/darker_gray" />

</RelativeLayout>
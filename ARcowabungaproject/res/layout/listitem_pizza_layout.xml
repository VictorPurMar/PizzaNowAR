<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:minHeight="130dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <View
        android:id="@id/separatorTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/imageInItem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/pizzaIcon"
        android:paddingRight="5dp"
        android:src="@drawable/home_image" />

    <TextView
        android:id="@+id/titleTextInItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separatorTop"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/priceTextInItem"
        android:layout_toRightOf="@id/imageInItem"
        android:background="#335533"
        android:text="titol" >
    </TextView>

    <TextView
        android:id="@id/priceTextInItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/separatorRight"
        android:layout_below="@id/separatorTop"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="#FF3333" 
        android:text="preu">
    </TextView>

    <TextView
        android:id="@+id/descTextInItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/separatorBottom"
        android:layout_below="@id/titleTextInItem"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/separatorRight"
        android:layout_toRightOf="@id/imageInItem"
        android:background="#33FF33" 
        android:text="desc">
    </TextView>

    <View
        android:id="@id/separatorRight"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/imageButtonInItem"
        android:background="@android:color/darker_gray" />

    <ImageButton
        android:id="@id/imageButtonInItem"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="" />

    <View
        android:id="@id/separatorBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray" />

</RelativeLayout>
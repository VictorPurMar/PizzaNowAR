<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabsLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#3be0d0" >

    <ImageView
        android:id="@+id/tabImg"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true" 
        android:layout_toLeftOf="@+id/tabTittle"
        android:contentDescription="@string/content_description_img"
        android:scaleType="fitCenter"
        android:src="@drawable/icontaboffers"
        android:tag="offers_image"  />

    <TextView
        android:id="@id/tabTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:text="@string/tab_offers"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_marginLeft="5dp" />

</RelativeLayout>
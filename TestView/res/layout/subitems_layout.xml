<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:paddingLeft="30dp"
    tools:context=".MainActivity" >
    <!--     android:orientation="vertical" -->
    
     <View
        android:id="@+id/pizzaPhotoInSubItem"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />


  <ImageView
        android:id="@+id/imageInSubItem"
        android:drawable="@drawable/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
  
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:text="@string/hello_world"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/imageInSubItem"
        android:layout_toLeftOf="@+id/pizzaButtonInSubItem"
        android:textStyle="bold" >
    </TextView>
    
    
    <Button
        android:id="@+id/pizzaButtonInSubItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/thirdView"
        android:textSize="6sp" />
    
     <View
        android:id="@+id/pizzaPhotoInSubItem"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

</RelativeLayout> 

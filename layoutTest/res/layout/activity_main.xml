<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@+id/linearButton1"
        android:layout_alignParentTop="true"
        android:background="@drawable/home_image" />

    <LinearLayout
        android:id="@+id/linearButton4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#FE2E2E"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingLeft="20dp" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:text="Do stuff" />
    </LinearLayout>

   <LinearLayout
       android:id="@+id/linearButton3"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:layout_above="@+id/linearButton4"
       android:layout_alignParentLeft="true"
       android:background="#FE2E33"
       android:clickable="true"
       android:orientation="horizontal"
       android:paddingLeft="20dp" >

       <ImageView
           android:id="@+id/img"
           android:layout_width="34dp"
           android:layout_height="34dp"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="5dp"
           android:src="@drawable/ic_launcher" />

       <TextView
           android:id="@+id/textView2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:layout_margin="5dp"
           android:text="Do stuff" />
   </LinearLayout>

   <LinearLayout
       android:id="@+id/linearButton2"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:layout_above="@+id/linearButton3"
       android:layout_alignParentLeft="true"
       android:background="#F22E2E"
       android:clickable="true"
       android:orientation="horizontal"
       android:paddingLeft="20dp" >

       <ImageView
           android:id="@+id/img"
           android:layout_width="34dp"
           android:layout_height="34dp"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="5dp"
           android:src="@drawable/ic_launcher" />

       <TextView
           android:id="@+id/textView2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:layout_margin="5dp"
           android:text="Do stuff" />
   </LinearLayout>

   <LinearLayout
       android:id="@+id/linearButton1"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:layout_above="@+id/linearButton2"
       android:layout_alignParentLeft="true"
       android:background="#FE2355"
       android:clickable="true"
       android:orientation="horizontal"
       android:paddingLeft="20dp" >

       <ImageView
           android:id="@+id/img"
           android:layout_width="34dp"
           android:layout_height="34dp"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="5dp"
           android:src="@drawable/ic_launcher" />

       <TextView
           android:id="@+id/textView2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:layout_margin="5dp"
           android:text="Do stuff" />
   </LinearLayout>

   <View
       android:id="@+id/view1"
       android:layout_width="match_parent"
       android:layout_height="5dp"
       android:layout_alignParentLeft="true"
       android:layout_alignTop="@+id/linearButton1"
       android:background="@drawable/gradient" />
    
</RelativeLayout>